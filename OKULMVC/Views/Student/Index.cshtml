@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Index";
}

<h1>Öğrenci Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <td>Numara</td>
            <td>Ad</td>
            <td>Soyad</td>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numara</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td><a class="btn btn-sm btn-success" href="/Student/EditStudent/@item.Ogrenciid">Düzenle </a> <a class="btn btn-sm btn-danger" href="/Student/DeleteStudent/@item.Ogrenciid" onclick="return confirm('Emin misiniz?')">Sil </a> <a class="btn btn-sm btn-success" href="/StudentLesson/Dersatama/@item.Ogrenciid"> İşlemler</a></td>
            </tr>
        }
    </tbody>
</table>