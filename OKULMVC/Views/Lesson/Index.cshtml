@model IEnumerable<Ders>
@{
    ViewData["Title"] = "Index";
}
<h1>Ders Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <td>Ders Adı</td>
            <td>Kredi:</td>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dersad</td>
                <td>@item.Kredi</td>
                <td><a class="btn btn-sm btn-success" href="/Lesson/EditLesson/@item.Dersid">Düzenle </a> <a class="btn btn-sm btn-danger" href="/Lesson/DeleteLesson/@item.Dersid" onclick="return confirm('Emin misiniz?')">Sil </a></td>
            </tr>
        }
    </tbody>
</table>